package group13Project;
import java.io.File;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
public class Config {
	
	private boolean hasConfig = false;
	private String configFolderDir;
	
	
	
	public Config() {
		
		//check if config file exist on local system
		setConfigFolderDir(System.getProperty("user.home") + "Desktop/group13ProjectFolder");
		File configFile = new File(System.getProperty("user.home"), "Desktop/group13ProjectFolder/conf.properties");
		setHasConfig(configFile.exists());
		
		
		
	}
	private void setConfigFolderDir(String dir) {
		this.configFolderDir = dir;
	}
	private void setHasConfig(Boolean hasConfig) {
		this.hasConfig = hasConfig;
	}
	public void createConfig() throws IOException {
		if(this.hasConfig == false) {
			File folder = new File(this.configFolderDir, "conf.properties");
			//Check if folder is created
			if(!folder.exists()) {
				if(folder.mkdir()) {
					File config = new File(this.configFolderDir, "conf.properties");
					
				}
				
			
			}
		}
	}
	
	public boolean hasConfig(){
		return hasConfig;
	}
}
