package group13Project.GUI;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Font;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.border.Border;

public class GUIMainFrame extends JFrame {
	
	// Instance variables -- GUI components
    private JPanel panel;
    private JLabel title;
    private JLabel message;
    private JLabel status;
    
    private static final Color headerBGColour = new Color(212,217,222);
    private static final Color headerFGColour = new Color(78,90,101);
    private static final Color mainBGColour = new Color(234, 236, 238);
    private static final Color mainFGColour = new Color(78,90,101);
	
	/* 
	 * Creates a GUI interface for user.
	 */
	public GUIMainFrame(Boolean setup) {
		super();
		
		setSize(600, 400);
		panel = new JPanel();
       
        panel.setLayout( new BorderLayout() );
        
        add( panel );  // add panel to the JFrame
        title = new JLabel( "Group 13 Project" );
        
        title.setOpaque(true);

        title.setFont(new Font("Arial Narrow", Font.ITALIC, 20));
        title.setHorizontalAlignment(javax.swing.SwingConstants.CENTER);
        title.setVerticalAlignment(JLabel.TOP);
        title.setForeground(headerFGColour);
        title.setBackground(headerBGColour);
        title.setMargin(new Insets(10,10,10,10));
     

        //set instructionLabel to frame
        panel.add( title , BorderLayout.NORTH);
        
        message =  new JLabel("Please wait while we set everything up.");
        message.setFont(new Font("Arial Narrow", Font.BOLD, 20));
        message.setHorizontalAlignment(javax.swing.SwingConstants.CENTER);
        panel.add(message, BorderLayout.CENTER);
        
        status =  new JLabel("checking Internet connection");
        status.setFont(new Font("Arial Narrow", Font.BOLD, 10));
        status.setHorizontalAlignment(javax.swing.SwingConstants.CENTER);
        panel.add(status, BorderLayout.CENTER);
        
		
	}
	
	public void updateStatus(String status) {
		
	}
}
